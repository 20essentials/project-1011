---
import { baseUrl } from '@/utils/functions';
const imgOutro = baseUrl(`/assets/outro.avif`);
---

<section class='am-outro'>
  <img class="img-outro" src={imgOutro} alt='ok' />
</section>

<style>
  .am-outro {
    height: 55vh;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 500;
    background-color: orange;
    clip-path: polygon(0 15%, 100% 0, 100% 85%, 0 100%);
    opacity: 0;

    @media (width >= 300px) and (orientation: landscape) {
      display: none;
    }

    .img-outro {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
</style>
