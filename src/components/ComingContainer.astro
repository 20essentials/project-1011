<style>
  .coming-container {
    height: 100vh;
    background-color: var(--global-color-1);
    width: 100%;
    /* background-color: #f008; */
    z-index: 5;
    display: flex;
    flex-direction: column;
    place-content: center;
    place-items: center;
    overflow-x: hidden;
    position: sticky;
    top: 0;
    mask-image: radial-gradient(
      ellipse var(--width-gradient, 50px) var(--height-gradient, 50px) at 50%
        var(--y-gradient, 90%),
      black 30%,
      transparent 35%
    );

    .coming-content {
      position: absolute;
      left: 50%;
      top: 15%;
      width: 70%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      place-content: center;
      place-items: center;
    }

    .coming-logo-v6 {
      width: 14.5vmax;
      margin-bottom: 0.2vmax;
    }

    h2 {
      font-family: 'GtaBold';
      font-size: 7vmax;
      line-height: 1;
      width: 43%;
      text-align: center;
      background-image: radial-gradient(
        circle at 50% var(--y, -30vmax),
        #ffd687 0,
        #fc5243 50vh,
        #9d2f6a 90vh,
        rgba(32, 31, 66, 0) 150vmax
      );
      background-clip: text;
      color: transparent;

      @media (width <= 1111px) {
        font-size: 5vmax;
      }
    }

    .container-logos {
      display: flex;
      gap: 2vmax;
      margin-top: 1.5vmax;

      .play5 {
        height: 1.5vmax;
      }

      .xbox {
        height: 1.5vmax;
      }
    }
  }
</style>
